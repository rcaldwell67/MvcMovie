@model MvcMovie.Models.WagerViewModel

@{
    ViewData["Title"] = "Index";
}
<partial name="~/Views/Shared/_WagerStats.cshtml" />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>

        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wagers![0].GameDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wagers![0].GameTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wagers![0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wagers![0].Side)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wagers![0].Payout)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Wagers!)
        {
            if (item.Type == "1") item.Type = "4 Team Parlay";
            if (item.Type == "2") item.Type = "Single Bet";
            if (item.Side == "1") item.Side = "FA";
            if (item.Side == "2") item.Side = "UD";
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Side)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payout)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    let table = new DataTable('#myTable');
    $('table').DataTable();
</script>